{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/server/**/*.spec.ts"
  ]
}