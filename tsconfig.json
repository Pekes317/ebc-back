{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2017", "dom"]
  },
  "include": [
    "server/**/*",
    "server/index.ts"
  ],
  "exclude": [
    "server/**/*.spec.ts"
  ]
}